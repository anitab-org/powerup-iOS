<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map" >

    <Button
        android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="52dp"
        android:text="@string/enter" />

    <Button
        android:id="@+id/house"
        android:layout_width="@dimen/map_click_width"
        android:layout_height="@dimen/map_click_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="23dp"
        android:alpha="0.00"
        android:text="@string/house" />

    <Button
        android:id="@+id/hospital"
        android:layout_width="@dimen/map_click_width"
        android:layout_height="@dimen/map_click_height"
        android:layout_alignBaseline="@id/house"
        android:layout_alignBottom="@id/house"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp"
        android:alpha="0.00"
        android:text="@string/hospital" />

    <Button
        android:id="@+id/boyfriend"
        android:layout_width="@dimen/map_click_width"
        android:layout_height="@dimen/map_click_height"
        android:layout_above="@id/enter"
        android:layout_alignLeft="@id/house"
        android:layout_alignStart="@id/house"
        android:layout_marginTop="275dp"
        android:alpha="0.00"
        android:text="@string/boyfriend" />

    <Button
        android:id="@+id/school"
        android:layout_width="@dimen/map_click_width"
        android:layout_height="@dimen/map_click_height"
        android:layout_above="@id/enter"
        android:layout_alignEnd="@id/enter"
        android:layout_alignRight="@id/enter"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="300dp"
        android:alpha="0.00"
        android:text="@string/school" />

</RelativeLayout>